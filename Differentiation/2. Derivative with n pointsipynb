        "import numpy as np\n",
        "\n",
        "import matplotlib.pyplot as plt\n",
        "from math import *\n",
        "\n",
        "# Function\n",
        "def f(x):\n",
        "    return x*e**x\n",
        "\n",
        "x=2\n",
        "h=0.01\n",
        "\n",
        "der=(f(x+h)-f(x-h))/(2*h)\n",
        "print('df(%.2f)/dx =%.4f' %(x,der))"
