    {
      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "def f(x):\n",
        "  return x*exp(x)\n",
        "\n",
        "h=0.01\n",
        "x=2\n",
        "\n",
        "df = (-25*f(x) + 48*f(x+h) - 36*f(x+2*h) + 16*f(x+3*h) - 3*f(x+4*h))/(12*h)\n",
        "\n",
        "print('df(%.2f)/dx = %.4f' %(x,df))"
